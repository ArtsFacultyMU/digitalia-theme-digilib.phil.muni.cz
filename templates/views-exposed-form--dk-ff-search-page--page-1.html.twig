{#
/**
 * @file
 * Theme override for a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 */
#}
{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
{{ q }}
{% endif %}
<div class="main-search-wrapper">
<div class="main-search-forms">
<div class="form--inline clearfix top-search">
  {{ form.search }}
  {{ form.searched_fields }}
</div>
<div class="form--inline clearfix bottom-search">
<div class="link">
  <a href="{{ '/en/advanced-search'|t }}">{{ 'Advanced search'|t }}</a>
</div>
{{ form.limit }}
</div>
</div>
<div class="main-search-button">
  {{ form.actions }}
</div>
</div>
